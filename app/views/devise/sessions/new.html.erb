<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 30%), url('https://files.slack.com/files-pri/T02NE0241-FABVDE23V/schermata_2018-04-23_alle_16.00.12.png');">
  <div class="wrapper_form_login">
    <h2 class= "text_label_login">sign in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, wrapper_html: { class: "wrapper_email_login" }, label_html: { class: 'label_email_login' } %>
      <%= f.input :password, required: false, wrapper_html: { class: "wrapper_password_login" }, label_html: { class: 'label_email_login' } %>
      <div class="row">
        <div class="col-md-6" class="container_remember_me">
          <%= f.input :remember_me, label_html: { class: 'label_remember_me' }, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="col-md-6">
          <%= render "devise/shared/links2" %>
        </div>
      </div>
      <div>
        <%= f.button :submit, "sign in", class: "button_form_login" %>
      </div>
      <% end %>
      <%= render "devise/shared/links4" %>
    </div>
    </div>
  </div>
